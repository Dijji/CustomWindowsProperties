<Window x:Class="CustomWindowsProperties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomWindowsProperties"
        mc:Ignorable="d"
        Title="Custom Windows Properties" Height="600" Width="1000">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibleIfTrue" />
        <Style x:Key="SelectTreeViewItemStyle"
               TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <local:CustomVirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected"  Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TreeView Grid.Row="0" Grid.Column="0" VirtualizingStackPanel.IsVirtualizing="True"
                      ItemsSource="{Binding Path=EditorPropertyTree}" FontSize="12"
                      ItemContainerStyle="{StaticResource SelectTreeViewItemStyle}"
                      SelectedItemChanged="EditorTree_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                    <Grid>
                        <TextBlock Text="{Binding Path=Name}" />
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <ScrollViewer Grid.Row="0" Grid.Column="1"
            HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="PropertyEditor" 
                  GotFocus="Editor_GotFocus" LostFocus="Editor_LostFocus">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Basics" FontWeight="Bold"  VerticalAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="1" Content="Name:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding CanonicalName}" MinWidth="150" VerticalAlignment="Center"
                         Tag="CanonicalName" HorizontalAlignment="Left"/>
                <Label Grid.Row="1" Grid.Column="1" Content="Installed:" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding IsEditedInstalled}" VerticalAlignment="Center"
                           DataContext="{Binding RelativeSource={RelativeSource FindAncestor, 
                           AncestorType={x:Type Window}}, Path=DataContext}"/>
                <Label Grid.Row="2" Grid.Column="0"  Content="Search" FontWeight="Bold"  VerticalAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="1" Content="InInvertedIndex:" VerticalAlignment="Center"/>
                <CheckBox Grid.Row="2" Grid.Column="2" IsChecked="{Binding InInvertedIndex}" VerticalAlignment="Center"
                          Tag="InInvertedIndex"/>
                <Label Grid.Row="3" Grid.Column="1" Content="IsColumn:" VerticalAlignment="Center"/>
                <CheckBox Grid.Row="3" Grid.Column="2" IsChecked="{Binding IsColumn}" VerticalAlignment="Center"
                          Tag="IsColumn"/>
                <Label Grid.Row="5" Grid.Column="1" Content="IsColumnSparse:" VerticalAlignment="Center"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"/>
                <CheckBox Grid.Row="5" Grid.Column="2" IsChecked="{Binding IsColumnSparse}" VerticalAlignment="Center"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"
                          Tag="IsColumnSparse"/>
                <Label Grid.Row="6" Grid.Column="1" Content="ColumnIndexType:" VerticalAlignment="Center"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"/>
                <ComboBox Grid.Row="6" Grid.Column="2" VerticalAlignment="Center"
                          MinWidth="100" HorizontalAlignment="Left"
                       SelectedItem="{Binding ColumnIndexType}" Tag="ColumnIndexType"
                       ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:ColumnIndexType}}}"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"/>
                <Label Grid.Row="7" Grid.Column="1" Content="MaxSize:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="2" Text="{Binding MaxSize}" MinWidth="50" VerticalAlignment="Center"
                         Tag="MaxSize" HorizontalAlignment="Left"/>
                <Label Grid.Row="8" Grid.Column="1" Content="Mnemonics:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="8" Grid.Column="2" Text="{Binding Mnemonics}" MinWidth="150" VerticalAlignment="Center"
                         Tag="Mnemonics" HorizontalAlignment="Left"/>
                <Label Grid.Row="9" Grid.Column="0" Content="Label" FontWeight="Bold" VerticalAlignment="Center"/>
                <Label Grid.Row="9" Grid.Column="1" Content="DisplayName:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="9" Grid.Column="2" Text="{Binding DisplayName}" MinWidth="150" VerticalAlignment="Center"
                         Tag="DisplayName" HorizontalAlignment="Left"/>
                <Label Grid.Row="10" Grid.Column="1" Content="SortDescription:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="10" Grid.Column="2" VerticalAlignment="Center" 
                          MinWidth="100" HorizontalAlignment="Left"
                       SelectedItem="{Binding SortDescription}" Tag="SortDescription"
                       ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:PropertySortDescription}}}"/>
                <Label Grid.Row="11" Grid.Column="1" Content="EditInvitation:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="11" Grid.Column="2" Text="{Binding EditInvitation}" MinWidth="150" VerticalAlignment="Center"
                         Tag="EditInvitation" HorizontalAlignment="Left"/>
                <Label Grid.Row="12" Grid.Column="1" Content="HideLabel:" VerticalAlignment="Center"/>
                <CheckBox Grid.Row="12" Grid.Column="2" IsChecked="{Binding HideLabel}" VerticalAlignment="Center"
                          Tag="HideLabel"/>
                
            </Grid>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Button Content="Choose Data Folder" Margin="20,0,0,0" Height="25" Click="ChooseDataFolder_Clicked"/>
            <Button Content="Export" Margin="20,0,0,0" Height="25" 
                    IsEnabled="{Binding CanExport}" Click="Export_Clicked"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <Button Content="Save" Margin="10,0,0,0" Height="25" 
                    IsEnabled="{Binding CanExport}" Click="Export_Clicked"/>
            <Button Content="Install" Margin="10,0,0,0" Height="25" 
                    IsEnabled="{Binding CanExport}" Click="Export_Clicked"/>
            <Button Content="Uninstall" Margin="10,0,0,0" Height="25" 
                    IsEnabled="{Binding CanExport}" Click="Export_Clicked"/>
            <Button Content="Copy ^" Margin="10,0,0,0" Height="25" 
                    IsEnabled="{Binding CanExport}" Click="Export_Clicked"/>
        </StackPanel>
        <TreeView Grid.Row="2" Grid.Column="0" VirtualizingStackPanel.IsVirtualizing="True"
                      ItemsSource="{Binding Path=InstalledPropertyTree}" FontSize="12"
                      ItemContainerStyle="{StaticResource SelectTreeViewItemStyle}"
                      SelectedItemChanged="InstalledTree_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                    <Grid>
                        <TextBlock Text="{Binding Path=Name}" />
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Grid Grid.Row="2" Grid.Column="1" 
              Visibility="{Binding IsInstalledPropertyVisible,Converter={StaticResource VisibleIfTrue}}">
            <StackPanel x:Name="PropertyDisplay" Grid.Row="2" Grid.Column="1" Orientation="Vertical"
                    Visibility="{Binding PropertyDisplayVisibility}">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Basics:" VerticalAlignment="Center"/>
                    <Label Content="Name:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CanonicalName}" VerticalAlignment="Center"/>
                    <Label Content="FormatId:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding FormatId}" VerticalAlignment="Center"/>
                    <Label Content="PropertyId:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding PropertyId}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Search:" VerticalAlignment="Center"/>
                    <Label Content="InInvertedIndex:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding InInvertedIndex}" VerticalAlignment="Center"/>
                    <Label Content="IsColumn:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding IsColumn}" VerticalAlignment="Center"/>
                    <Label Content="IsColumnSparse:" VerticalAlignment="Center"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"/>
                    <TextBlock Text="{Binding IsColumnSparse}" VerticalAlignment="Center"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"/>
                    <Label Content="ColumnIndexType:" VerticalAlignment="Center"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"/>
                    <TextBlock Text="{Binding ColumnIndexType}" VerticalAlignment="Center"
                       Visibility="{Binding IsColumn,Converter={StaticResource VisibleIfTrue}}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Label:" VerticalAlignment="Center"/>
                    <Label Content="DisplayName:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                    <Label Content="SortDescription:" VerticalAlignment="Center"/>
                    <TextBlock VerticalAlignment="Center" Text="{Binding SortDescription}"/>
                    <Label Content="EditInvitation:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding EditInvitation}" VerticalAlignment="Center"/>
                    <Label Content="HideLabel:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding HideLabel}" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding HelpText}" 
                   Visibility="{Binding IsHelpVisible,Converter={StaticResource VisibleIfTrue}}"/>
        <TextBlock x:Name="StatusBar" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="25"/>
    </Grid>
</Window>
